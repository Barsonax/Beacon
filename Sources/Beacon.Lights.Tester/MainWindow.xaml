<Window x:Class="Beacon.Lights.Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beacon Build Light Tester" Height="155" Width="440" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="deviceList" HorizontalAlignment="Left" Margin="9,27,0,0" VerticalAlignment="Top" Width="236" Grid.Column="1" Loaded="ComboBox_Loaded"/>
        <Button x:Name="OffButton" Content="Off" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="OffButton_Click" />
        <Button x:Name="SuccessButton" Content="Success" HorizontalAlignment="Left" Margin="36,70,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="SuccessButton_Click" />
        <Button x:Name="InvestigateButton" Content="Investigate" HorizontalAlignment="Left" Margin="196,70,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="InvestigateButton_Click"/>
        <Button x:Name="FailedButton" Content="Failed" HorizontalAlignment="Left" Margin="116,70,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="FailedButton_Click"/>
        <Label Content="Device:" HorizontalAlignment="Left" Margin="60,23,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
